<h1 class="page-header">Categories</h1>

<% if @category.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            A categoria não foi salva porque:
            <ul>
                <% @category.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                <% end %>
            </ul>
        </div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for [:backoffice, @category] do |form| %>
                <div class="form-group">
                    <label>Descrição</label>
                    <%= form.text_field :description, class: "form-control", placeholder: "Ex: Animais/Pets", required: "required"%>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default">Salvar</button>
                </div>
            <% end %>
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->