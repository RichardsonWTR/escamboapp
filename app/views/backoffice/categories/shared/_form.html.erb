<h1 class="page-header"><%= @category.model_name.human(count: 2) %></h1>

<% if @category.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <%# A categoria não foi salva porque: %>
            <ul>
                <% @category.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                <% end %>
            </ul>
        </div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <%= action_message %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for [:backoffice, @category] do |form| %>
                <div class="form-group">
                    <%= form.label :description%>
                    <%= form.text_field :description, class: "form-control", placeholder: true, required: "required"%>
                </div>

                <div class="form-group">
                    <%= form.submit class: "btn btn-default" %>
                </div>
            <% end %>
        </div>
        <!-- /.col-lg-6 -->
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->